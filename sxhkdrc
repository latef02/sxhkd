# screen brightness controls
{super + alt + Up, super + alt + Down}
   sudo  xbacklight {-inc 10, -dec 10}; \
   get_brightness=$(xbacklight -get | cut -f 1 -d '.'); \
   dunstify "ðŸ’¡  Brightness: "$get_brightness -t 1000 -r 1
   pkill -RTMIN+30 dwmblocks

